    {% endif %}
    {{- parent() -}}
{%- endblock checkbox_widget %}

{% block radio_widget -%}
    {% if 'radio-inline' not in parent_label_class %}
        {% if errors|length > 0 -%}
            {% set attr = attr|merge({class: (attr.class|default('') ~ ' error')|trim}) %}
        {% endif %}
    {% endif %}
    {{- parent() -}}
{%- endblock radio_widget %}